<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<script>

    const ForgotPasswordMailKit = (e) => {
        console.log("Reset function was called");

        event.preventDefault();
        const emailInput = document.querySelector('#ForgotPasswordEmail');
        const Email = emailInput.value;

        const jsonData = {
            email: Email,
        };
        console.log(jsonData);

        $.ajax({
            type: "POST",
            url: '@Url.Action("ForgotPasswordMailKit", "PasswordReset")',
            data: jsonData,
            success: function (response) {
                console.log(response);
            },
        });
    };
</script>


<div>
    <main>
        <aside>
            <p id="passwordMassage">Forgot your password? No worries, just enter your email and weâ€™ll send you a link to
                reset your password.
            </p>
        </aside>

        <form>
            <div id="emailBackground">
                <input type="text" id="ForgotPasswordEmail" placeholder="emal:">
            </div>
            <button id="emailBTN" onclick="ForgotPasswordMailKit(event)">Submit</button>

        </form>

    </main>
</div>